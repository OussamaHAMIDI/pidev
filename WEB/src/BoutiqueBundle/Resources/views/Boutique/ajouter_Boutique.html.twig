    <script>
        google.maps.event.addDomListener(window, 'load', initialize);


        function initialize() {

            var autocomplete = new google.maps.places.Autocomplete(document.getElementById('adresse'));
            google.maps.event.addListener(autocomplete, 'place_changed', function () {
                var places= autocomplete.getPlace();
                var location = places.geometry.location.lat() ;
                var location2 = places.geometry.location.lng()  ;
                $('#latitude').val(location);
                $('#longitude').val(location2);

                //document.getElementById('r1').innerText=location
                //document.getElementById('r2').innerHTML = location2

            });





        }


    </script>
