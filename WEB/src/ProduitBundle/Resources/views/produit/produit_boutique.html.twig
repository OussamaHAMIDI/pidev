{%extends '@Souk/layout.html.twig'%}
{%block body %}

    <div class="product">

        <div class="container">
            <div class="col-md-9">
                <h4>Liste des Produits de la Boutique {{ boutique.nom }}</h4>
                <div class="mid-popular">
                    {% for p in produits %}
                        <div class="col-md-4 item-grid1 simpleCart_shelfItem">
                            <div class=" mid-pop">
                                <div class="pro-img">
                                    <img src="{{ asset('img/' ~ p.path) }}" class="img-responsive" alt="">
                                    <div class="zoom-icon ">
                                        <a class="picture" href="{{ asset('img/' ~ p.path) }}" rel="title" class="b-link-stripe b-animate-go  thickbox"><i class="glyphicon glyphicon-search icon "></i></a>
                                        <a href="{{ path('afficher_produit_details',{'id':p.id}) }}"> Afficher Les Détails</a>
                                    </div>
                                </div>
                                <div class="mid-1">
                                    <div class="women">
                                        <div class="women-top">
                                            <span>Référence: {{  p.reference }}</span>
                                            <h6><a href="">Libelle: {{  p.libelle }}</a></h6>

                                        </div>
                                        <div class="img item_add">
                                            <a href="#"><img src="../../../../../web/images/ca.png" alt=""></a>
                                        </div>
                                        <div class="clearfix"></div>
                                    </div>
                                    <div class="mid-2">
                                        <p ><em class="item_price">Prix: {{  p.prix }}dt</em></p>
                                        <div class="block">
                                            <div class="starbox small ghosting"> </div>
                                        </div>

                                        <div class="clearfix"></div>
                                    </div>

                                </div>
                            </div>
                        </div>
                    {% endfor %}


                    <div class="clearfix"></div>
                </div>
            </div>


        </div>
    </div>
    <!--//content-->

{% endblock %}