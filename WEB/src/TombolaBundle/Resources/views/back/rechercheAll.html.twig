<div class="container">
    <div class="col-lg-9">
        <table class="table table-responsive">
            <thead>
            <tr>
                <th>Titre</th>
                <th>Date du tirage</th>
                <th>Description</th>
                <th colspan="3">Opérations</th>
            </tr>
            </thead>
            <tbody>
            {% for tombola in tombolas %}
                <tr>
                    <td> {{ tombola.titre }} </td>
                    <td> {{ tombola.dateTirage | date('d-m-y h:m:s') }} </td>
                    <td> {{ tombola.description [0:30]}}{% if tombola.description|length > 30 %}...{% endif %}</td>

                    <td>
                        <button class="btn btn-info"><i class="fa fa-info-circle"></i><a
                                    href="{{ path('details',{id: tombola.id}) }}">
                                Détails</a></button>
                    </td>

                    <td>
                        <button class="btn btn-warning"><i class="fa fa-pencil"></i><a
                                    href="{{ path('modifier',{id: tombola.id}) }}">
                                Modifier</a>
                        </button>
                    </td>
                    <td>
                        <button class="btn btn-danger alert_supp" href="{{ path('supprimer',{id: tombola.id}) }}">
                            <i class="fa fa-trash"></i> Supprimer </button>
                    </td>

                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
</div>