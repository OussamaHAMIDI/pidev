<?xml version="1.0" encoding="utf-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
  <entity name="ProduitPanier" table="produit_panier">
    <indexes>
      <index name="id_panier" columns="idPanier"/>
      <index name="id_produit" columns="idProduit"/>
    </indexes>
    <id name="idPanier" type="integer" column="id_panier"/>
    <id name="idProduit" type="integer" column="id_produit"/>
    <field name="reference" type="string" column="reference" length="50" nullable="false">
      <options>
        <option name="fixed"/>
      </options>
    </field>
    <field name="libelle" type="string" column="libelle" length="50" nullable="false">
      <options>
        <option name="fixed"/>
      </options>
    </field>
    <field name="description" type="string" column="description" length="255" nullable="false">
      <options>
        <option name="fixed"/>
      </options>
    </field>
    <field name="prix" type="float" column="prix" precision="10" scale="0" nullable="false"/>
    <field name="taille" type="string" column="taille" length="10" nullable="false">
      <options>
        <option name="fixed"/>
      </options>
    </field>
    <field name="couleur" type="string" column="couleur" length="50" nullable="false">
      <options>
        <option name="fixed"/>
      </options>
    </field>
    <field name="texture" type="string" column="texture" length="50" nullable="false">
      <options>
        <option name="fixed"/>
      </options>
    </field>
    <field name="poids" type="float" column="poids" precision="10" scale="0" nullable="false"/>
    <field name="quantiteVendu" type="float" column="quantite_vendu" precision="10" scale="0" nullable="false"/>
    <field name="poidsVendu" type="float" column="poids_vendu" precision="10" scale="0" nullable="false"/>
    <field name="prixVente" type="float" column="prix_vente" precision="10" scale="0" nullable="false"/>
    <field name="dateAjout" type="datetime" column="date_ajout" nullable="false"/>
    <field name="livree" type="boolean" column="livree" nullable="false">
      <options>
        <option name="default">0</option>
      </options>
    </field>

    <many-to-one field="idBoutique" target-entity="Boutique" fetch="LAZY">
      <join-columns>
        <join-column name="id_boutique" referenced-column-name="id"/>
      </join-columns>
    </many-to-one>
    <many-to-one field="idProduit" target-entity="Produit" fetch="LAZY">
      <join-columns>
        <join-column name="id_produit" referenced-column-name="id"/>
      </join-columns>
    </many-to-one>

  </entity>
</doctrine-mapping>
