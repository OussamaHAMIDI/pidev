{% trans_default_domain 'FOSUserBundle' %}

{% if error %}
    <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
{% endif %}


{% block title %}
    <div class="section-title">
        <h2 class="title">
            Connexion
        </h2>
    </div>
{% endblock title %}


            <form action="{{ path("fos_user_security_check") }}" method="post">
                {% if csrf_token %}
                    <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
                {% endif %}

                <div class="form-group">
                    <label class="control-label required" for="username">{{ 'security.login.username'|trans }}</label>
                    <input type="text" id="username" name="_username" required="required"  value="{{ last_username }}" autocomplete="username"
                           class="form-control">
                </div>

                <div class="form-group">
                    <label class="control-label required" for="password">{{ 'security.login.password'|trans }}</label>
                    <input type="password" id="password" name="_password" required="required"  autocomplete="current-password" class="form-control">
                </div>

                <div class="form-group">
                    <label class="control-label required" for="remember_me">
                        <input type="checkbox" id="remember_me" name="_remember_me"  value="on" checked>
                    {{ 'security.login.remember_me'|trans }}</label>
                </div>

                <div class="form-group">
                    <input type="submit"  class="primary-btn" id="_submit" name="_submit" value="{{ 'security.login.submit'|trans }}" style="child-align: center"/>
                </div>

            </form>



